<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlarmRinging">

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="현재 날짜 띄워주세요"
        android:textSize="30dp"
        android:textColor="@color/OnPrimary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00"
            android:textSize="70dp"
            android:textColor="@color/OnPrimary"/>
        <TextView
            android:id="@+id/currentAMPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AM"
            android:textSize="50dp"
            android:textColor="@color/OnPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50dp">
        <include layout="@layout/todo_list_design" android:id="@+id/todo1"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo2" android:visibility="invisible"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo3" android:visibility="invisible"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo4" android:visibility="invisible"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo5" android:visibility="invisible"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo6" android:visibility="invisible"/>
        <include layout="@layout/todo_list_design" android:id="@+id/todo7" android:visibility="invisible"/>
    </LinearLayout>



</LinearLayout>