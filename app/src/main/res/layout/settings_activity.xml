<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settings_fragment"
        android:name="com.example.alarm.SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/settings_activity">

    </androidx.fragment.app.FragmentContainerView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/setting_push_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //뒤로가기 버튼
            <Button
                android:id="@+id/repeat_alarm_backbutton"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/backbtn" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:text="@string/푸시알림시간"
                android:textSize="20dp"
                android:gravity="center">
            </TextView>

            <TimePicker
                android:id="@+id/push_alarm_time_picker"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_gravity="center_horizontal"
                android:timePickerMode="spinner"/>



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>